<div id="new_user">

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :name %>
    <%= text_field_tag :name, params[:name] %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <%= submit_tag "Log in", :class => 'btn btn-success btn-med' %>
<% end %>
</div>