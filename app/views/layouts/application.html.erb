  <head>
    <%= favicon_link_tag 'vf2.png' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Varfoo" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Uncomment to make IE8 render like IE7 -->
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
    <!-- Set the viewport width to device width for mobile -->

    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

    <%= stylesheet_link_tag    "application", :media => "all"%>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>

  <body> 

    <div id="notification" data-dismiss="alert">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}"  %>
      <% end %>
    </div>
    

    <!-- <div id="header2"> -->
    <!--   <h1 id="logo"> -->
    <!--     Varfoo<span>.</span> -->
    <!--   </h1> -->
    <!-- </div> -->

    <div id='fluid'>
      <div id='fluid-wrapper'>
        <div id='header'>
          Varfoo
        </div>
        <div id='links'>
          <div class='alignment'>
            <%= link_to 'Recent Posts',  root_path, :class => 'navlink1' %> 
            <%= link_to 'Babes',  '#', :class => 'subnavlink1' %> 
            <%= link_to 'Movies',  '#', :class => 'subnavlink1' %> 
            <%= link_to 'Technology',  '#', :class => 'subnavlink1' %> 
          </div>

          <div class='alignment'>
            <%= link_to 'About / CV', '#', :class => 'navlink2' %>
            <%= link_to 'Biography',  '#', :class => 'subnavlink2' %> 
            <%= link_to 'Works',  '#', :class => 'subnavlink2' %> 
          </div>

          <div class='alignment'>
            <%= link_to 'Contact', '#', :class => 'navlink3' %>
            <%= link_to 'Email',  '#', :class => 'subnavlink3' %> 
            <%= link_to 'Facebook',  '#', :class => 'subnavlink3' %> 
            <%= link_to 'Twitter',  '#', :class => 'subnavlink3' %> 
          </div>

          <% if current_admin.present? %>
            <div id='alignment'>
              <%= link_to 'New Article', new_article_path, :class => 'navlink4'%>
            </div>
          <% end %>

        </div>
      </div>
    </div>

    <div id="catchphrase">
      keep it simple.
    </div>

    <div id="main" role="main">
      <div class="container">
        <%= yield %>
      </div>
    </div>

    <div id="footer">
      <a id="top" href=''>â–² Scroll Up</a>
    </div>
    <% if current_admin.present? %>
      <div id="user_nav">
        <h4>
          Logged in as <%= current_admin.name %>.
          <%= link_to "Log out", log_out_path %>
        </h4>
      </div>
    <% end %>

  </body>
</html>
